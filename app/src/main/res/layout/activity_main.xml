<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mypc.demosqliterepository.activity.main.MainActivity">

    <Button
        android:text="List Unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnListUnit" />

    <Button
        android:text="List Class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnListClass" />

    <Button
        android:text="List Student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnListStudent" />

    <Button
        android:text="List Transcript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnListTranscript" />
</LinearLayout>
