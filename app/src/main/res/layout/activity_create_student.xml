<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mypc.demosqliterepository.activity.createactivity.CreateStudentActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/edtInputNameStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name Student"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnInputIdUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Unit" />

    <Button
        android:id="@+id/btnInputIdClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Class" />
    <EditText
        android:id="@+id/edtInputBirthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="BirthDate"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnCreateStudentFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Student" />
</LinearLayout>

